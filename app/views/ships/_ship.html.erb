<div class="row ship-holder">
  <div class="col-md-1 col-sm-2 col-xs-1 ship-left">
    <img class= "img-responsive img-rounded" src="https://unsplash.it/48/48/?random
" alt="" />
  </div>
  <div class="col-md-11 col-sm-10 col-xs-11 ship-right">
    <div class="ship-body">
      <div class="ship-body-header">
        <div class="username">
          <%= link_to ship.user.username, user_path(ship.user.id) %>
        </div>
        <div class="created-at">
          at <%= ship.created_at.strftime("%I:%M%p") %>
          on <%= ship.created_at.to_date.to_s %>
        </div>
      </div>
      <div class="ship-body-body">
        <%= ship.body %>
      </div>
    </div>
  </div>
</div>
